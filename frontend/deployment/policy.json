{
    "Version": "2012-10-17",
    "Id": "AllowReadBucket",
    "Statement": [
        {
            "Sid": "AllowReadBucket",
            "Effect": "Allow",
            "Principal": "*",
            "Action": [
                "s3:GetObject",
                "s3:GetBucketLocation",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::emmy-recipe-app/*",
                "arn:aws:s3:::emmy-recipe-app"
            ]
        }
    ]
}